<h1>Edit movie</h1>
<form action="/movies/{{movie.id}}/edit" method="post">

    <label for="title">Title</label>
    <input type="text" name="title" id="title" value={{movie.title}} />

    <label for="genre">Genre</label>
    <input type="text" name="genre" id="genre" value={{movie.genre}} />

    <label for="plot">Plot</label>
    <input type="text" name="plot" id="plot" value={{movie.genre}} />
    <br>
    <label>Cast
        {{!-- {{celebs}}
        {{#each celebs}}
        <p>
            {{this.celeb.name}}
            {{this.checked}}
        </p> --}}

        {{!-- {{/each}} --}}
        <select name="choice" multiple>
            {{#each celebs}}
            {{#unless this.checked}}
            <option value="{{this.celeb._id}}">{{this.celeb.name}}</option>
            {{else}}
            <option value="{{this.celeb._id}}" selected>{{this.celeb.name}}</option>
            {{/unless}}
            {{/each}}
        </select>
    </label>
    <button type="submit">Modify</button>
</form>